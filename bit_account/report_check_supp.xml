<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="report_check_supp">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="o">
            <!-- This report is (obviously) a work in progress -->
            <div class="page">
            	<div t-if="True">
	            	<div class="row mt32 mb32" >
		        		<div class="col-xs-9">
			                <address t-field="o.partner_id"  />
		        		</div>
						<div class="col-xs-3">
							<strong>
				                <span t-esc="o.amount"
				                    t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/><br/>
			        		</strong>
		        		</div>
	            	</div>
	            	<div class="row mt32 mb32">
	            		<div class="col-xs-12">
	            			<span t-esc="get_amount_in_letters(o.amount)" />
	            		</div>
					</div>
	            	<div class="row mt32 mb32">
		        		<div class="col-xs-3">
			                Quito, <span t-esc="formatLang(o.date , date=True)"/><br/>
		        		</div>
		        	</div>
				</div>
            </div>
        </t>
    </t>
</template>
</data>
</openerp>
