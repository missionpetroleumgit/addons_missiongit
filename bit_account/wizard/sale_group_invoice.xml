<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_sale_order_group_invoice" model="ir.ui.view">
            <field name="name">Crear Facturas</field>
            <field name="model">sale.group.invoice</field>
            <field name="arch" type="xml">
                <form string="Crear Facturas">
                    <separator colspan="4" string="Do you really want to create the invoice(s)?" />
                    <group>
                        <!--<field name="grouped"/>-->
                        <field name="invoice_date"/>
                    </group>
                    <footer>
                        <button name="group_invoices" string="Crear Facturas" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
               </form>
            </field>
        </record>

        <record id="action_sale_order_group_invoice" model="ir.actions.act_window">
            <field name="name">Agrupar Facturas</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.group.invoice</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_sale_order_group_invoice"/>
            <field name="target">new</field>
            <field name="multi">True</field>
        </record>

        <record model="ir.values" id="sale_order_group_invoice">
            <field name="model_id" ref="sale.model_sale_order" />
            <field name="name">Agrupar Facturas</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.act_window,' + str(ref('action_sale_order_group_invoice'))" />
            <field name="key">action</field>
            <field name="model">account.invoice</field>
        </record>
    </data>
</openerp>
