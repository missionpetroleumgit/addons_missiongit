            	<!--<button name="%(account.action_bank_reconcile_bank_statements)d" position="attributes">-->
					<!--<attribute name="groups">account.group_account_manager</attribute>-->
				<!--</button>         -->
            <!--</field>-->
		<!--</record> -->
		
		<record id="invoice_form_number_invoice" model="ir.ui.view">
            <field name="name">invoice.form.number.invoice</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
            	<field name="number" readonly="1" class="oe_inline" position="after">
            		<field name="number" readonly="1" invisible="1" class="oe_inline"/>
            	</field>
            	<field name="number" position="before">
            		<field name="number_reem" />
            	</field>
			</field>
        </record>   
        
        <record id="invoice_tree_inherit" model="ir.ui.view">
            <field name="name">account.invoice.tree.inherit</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_tree"/>
            <field name="arch" type="xml">
            	<field name="number" position="replace">
            		<field name="number" invisible="1"/>
            	</field>
				<field name="number" position="after">
					<field name="number_reem" string="Número Factura"/>
				</field>
			</field>
        </record>
        
        <record id="invoice_supplier_form_inherit" model="ir.ui.view">
            <field name="name">invoice.supplier.form.inherit</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
            	<field name="number" readonly="1" class="oe_inline" position="after">
            		<field name="number" readonly="1" invisible="1" class="oe_inline"/>
            	</field>
            	<field name="number" class="oe_inline"  attrs="{'invisible': [('state', '=', 'draft')]}" position="after">
                    <field name="number_reem" readonly="1"/>
                </field>
            </field>
        </record>

        <record id="view_bit_account_move_form_inherit" model="ir.ui.view">
            <field name="name">account.move.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <field name="to_check" position="after">
                	<field name="group_report_by_account"/>
                </field>
                <!--CSV:25-06-2018: AUMENTO PARA IDENTIFICAR ASIENTOS DIRECTOS PARA CONCILIACION-->
                <field name="period_id" position="after">
                	<field name="is_conci_direct"/>
                </field>
            </field>
        </record>

    </data>
</openerp>
