<?xml version="1.0" encoding="utf-8"?>
<!-- vim:fdn=3:
-->
<openerp>
    <data>


		<record model="ir.ui.view" id="view_statement_account_supplier">
			<field name="name">view.statement.account.supplier</field>
			<field name="model">statement.account.supplier</field>
			<field name="arch" type="xml">
				<form string="Historial de cuenta proveedores" version="7.0">
                <sheet>
                    <group col="4">
                        <field name="id" invisible="1"/>
                        <field name="company_id"/>
                        <field name="datefrom"/>
                        <field name="dateto"/>
                        <field name="account_id" required="1"/>
                        <field name="summary"/>
                    </group>
                    <field name="partner_ids"/>
                    <button name="generar" type="object" string="Imprimir" attrs="{'invisible': [('id','=',False)]}"/>
                </sheet>
                </form>
			</field>
		</record>

        <record model="ir.actions.act_window" id="action_statement_account_supplier">
			<field name="name">Historial de cuenta proveedores</field>
            <field name="res_model">payables.account</field>
			<field name="res_model">statement.account.supplier</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
		</record>

        <record id="action_payables_account_form" model="ir.actions.act_window">
            <field name="name">Cuentas por Pagar</field>
            <field name="res_model">payables.account</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="context">{'supplier': True}</field>
            <field name="target">current</field>
        </record>

        <menuitem id="menu_action_reporte_statement_account_supplier" name="Historial estado de cuenta proveedores"
                  parent="account.final_accounting_reports"  action="action_statement_account_supplier"
          />

        <menuitem id="menu_action_reporte_statement_account_supplier" name="Historial estado de cuenta clientes"
                  parent="mission_accounting_reports"  action="action_statement_account_customer"
          />
    </data>
</openerp>
