<openerp>
    <data>

        <record model="ir.actions.act_window" id="action_pruchase_taxes">
			<field name="name">Impuestos Compras</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">purchase.taxes</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>


<!-- Payment Tree View -->
		<record model="ir.ui.view" id="tree_view_purchase_taxes">
			<field name="name">tree_view_purchase_taxes</field>
			<field name="model">purchase.taxes</field>
			<field name="arch" type="xml">
				<tree>
					<field name="company_id" />
                    <field name="datefrom" />
                    <field name="dateto"/>
				</tree>
			</field>
		</record>


		<record model="ir.ui.view" id="purchase_taxes_form_view">
			<field name="name">purchase_taxes_form_view</field>
			<field name="model">purchase.taxes</field>
			<field name="arch" type="xml">
                <form string="Impuestos Compras">
                    <sheet>
                        <header>
                            <button name="generar" type="object" class="object" string="Generar">Generar</button>
                        </header>
                        <group>
                        <field name="company_id"/>
                        <field name="datefrom"/>
                        <field name="dateto"/>
                        <field name="type_tax"/>
                        </group>
                        <field name="partner_ids"/>
                    </sheet>
                </form>
            </field>
        </record>


        <menuitem id="menu_action_reporte_purchase_taxes" name="Impuestos Compras"
                  parent="account.menu_tax_report"  sequence="6" action="action_pruchase_taxes"
          />
    </data>
</openerp>
