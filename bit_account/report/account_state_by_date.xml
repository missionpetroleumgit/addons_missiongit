<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_account_bydate_form" model="ir.ui.view">
            <field name="name">view.bydate.account.form</field>
            <field name="model">account.state.bydate</field>
            <field name="arch" type="xml">
                <form string="Estado de Cuentas" version="7.0">
                <sheet>
                    <group col="4">
                        <field name="account_type"/>
                       	<field name="period_length"/>
                        <field name="start_period"/>
                        <field name="end_period"/>
                        <field name="file_name" invisible="1"/>
                        <field name="file" filename="file_name"/>
                    </group>
                    <button name="create_excel" type="object" string="Imprimir"/>
                </sheet>
                </form>
            </field>
        </record>

        <record id="action_account__bydate" model="ir.actions.act_window">
            <field name="name">Estado de cuentas</field>
            <field name="res_model">account.state.bydate</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">current</field>
        </record>

       <menuitem action="action_account__bydate" id="menu_action_account__bydate" parent="account.final_accounting_reports"/>

    </data>
</openerp>
