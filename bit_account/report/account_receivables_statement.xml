<openerp>
    <data>

		<record model="ir.ui.view" id="view_account_receivables_customer">
			<field name="name">view.account.receivables.statement</field>
			<field name="model">account.receivables.statement</field>
			<field name="arch" type="xml">
				<form string="Estado de cuenta clientes" version="7.0">
                <sheet>
                    <group col="4">
                        <field name="id" invisible="1"/>
                        <field name="company_id"/>
                        <field name="datefrom"/>
                        <field name="dateto"/>
                        <field name="account_id" domain="[('company_id', '=', company_id)]" groups="account.group_account_user" required = "1"/>
                        <field name="summary"/>
                    </group>
                    <field name="partner_ids" context="{'search_default_customer':1}"/>
                    <button name="generar" type="object" string="Imprimir" attrs="{'invisible': [('id','=',False)]}"/>
                </sheet>
                </form>
			</field>
		</record>

        <record model="ir.actions.act_window" id="action_account_receivables_statement">
			<field name="name">Estado de cuenta clientes</field>
			<field name="res_model">account.receivables.statement</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
		</record>

