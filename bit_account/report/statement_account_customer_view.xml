<openerp>
    <data>

        <record id="view_statement_account_customer_form" model="ir.ui.view">
            <field name="name">view.statement.account.customer.form</field>
            <field name="model">statement.account.customer</field>
            <field name="arch" type="xml">
                <form string="Cuentas por Cobrar">
                    <sheet>
                        <group col="4">
                            <field name="company_id"/>
                            <field name="account_type"/>
                            <field name="period_length"/>
                            <field name="start_period" options="{'no_create': True}"/>
                            <field name="end_period" options="{'no_create': True}"/>
                            <field name="type_export"/>
                            <field name="id" invisible="1"/>
                        </group>
                        <field name="partner_ids"/>
                        <button name="create_excel" type="object" string="Imprimir" attrs="{'invisible': [('id','=',False)]}"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_statement_account_customer">
			<field name="name">Historico de cuenta clientes</field>
			<field name="res_model">statement.account.customer</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
		</record>

        <!--<menuitem id="menu_action_reporte_statement_account_customer" name="Historial estado de cuenta clientes"-->
                  <!--parent="account.final_accounting_reports"  action="action_statement_account_customer"-->
          <!--/>-->

        <menuitem id="menu_action_reporte_statement_account_customer" name="Historial estado de cuenta clientes"
                  parent="mission_accounting_reports"  action="action_statement_account_customer"
          />

    </data>
</openerp>
