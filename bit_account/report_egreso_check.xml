								<tr>
									<td><strong>RUC: </strong><span t-field="o.line_ids[0].partner_id.part_number"/></td>
									<td><strong>Fecha: <span t-field="o.line_ids[0].partner_id.ciudad_id"/></strong> - <span t-field="o.date"/></td>
								</tr>
								<tr >
									<td><strong>Banco: </strong><span t-field="o.journal_id.name"/></td>
									<td><strong>Fecha impresión: </strong><span t-esc="date_now"/></td>
								</tr>
								<tr >
									<td><strong>Concepto: </strong><span t-field="o.concept"/></td>
								</tr>
							</table>
