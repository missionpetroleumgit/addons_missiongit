<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="account_deduction" model="workflow">
            <field name="name">Account deduction</field>
            <field name="osv">account.deduction</field>
            <field name="on_create">True</field>
        </record>

    <!-- Activities -->

        <record id="deduction_draft" model="workflow.activity">
            <field name="wkf_id" ref="account_deduction"/>
            <field name="name">draft</field>
            <field name="flow_start">True</field>
        </record>
           
        <record id="deduction_open" model="workflow.activity">
            <field name="wkf_id" ref="account_deduction"/>
            <field name="name">open</field>
            <field name="kind">function</field>
            <field name="flow_start">True</field>
            <field name="action">wkf_open()</field>
        </record>
        
       <record id="deduction_paid" model="workflow.activity">
            <field name="wkf_id" ref="account_deduction"/>
            <field name="name">paid</field>
            <field name="kind">function</field>
            <field name="action">wkf_paid()</field>
            <field name="flow_stop">True</field>
        </record>
        
        <record id="deduction_cancel" model="workflow.activity">
            <field name="wkf_id" ref="account_deduction"/>
            <field name="name">cancel</field>
            <field name="kind">function</field>
            <field name="action">wkf_cancel()</field>
            <field name="flow_stop">True</field>
        </record>
  
    <!-- Transition -->
        <record id="deduction_draft_open" model="workflow.transition">
            <field name="act_from" ref="deduction_draft"/>
            <field name="act_to" ref="deduction_open"/>
            <field name="signal">wkf_open</field>
        </record>
            
        <record id="deduction_open_paid" model="workflow.transition">
            <field name="act_from" ref="deduction_open"/>
            <field name="act_to" ref="deduction_paid"/>
            <field name="signal">wkf_paid</field>
        </record>
        
        <record id="deduction_open_cancel" model="workflow.transition">
            <field name="act_from" ref="deduction_open"/>
            <field name="act_to" ref="deduction_cancel"/>
            <field name="signal">wkf_cancel</field>
        </record>
        
        <record id="deduction_paid_cancel" model="workflow.transition">
            <field name="act_from" ref="deduction_paid"/>
            <field name="act_to" ref="deduction_cancel"/>
            <field name="signal">wkf_cancel</field>
        </record>
    </data>
</openerp>
