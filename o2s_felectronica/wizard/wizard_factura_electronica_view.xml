        <record id="action_factura_electronica_file" model="ir.actions.act_window">
            <field name="name">Factura Electronica</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wizard.factura.electronica</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_factura_electronica_file"/>
           <field name="target">new</field>
            <field name="multi">True</field>
        </record>
        <!--CSV:28-12-2017:AUMENTO PARA ENVIO MASIVO-->
        <record model="ir.values" id="account_invoice_felectronica">
            <field name="model_id" ref="o2s_felectronica.model_account_invoice" />
            <field name="name">Factura Electronica*</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.act_window,' + str(ref('action_factura_electronica_file'))" />
            <field name="key">action</field>
            <field name="model">account.invoice</field>
        </record>

    </data>
