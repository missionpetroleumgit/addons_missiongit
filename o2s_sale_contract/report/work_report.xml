<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

<template id="work_report_document">
    <!--report_invoice_disaggregated_document-->
    <t t-call="report.external_layout">
        <div class="page">
            <div class="row mt32 mb32">
                <div class="col-xs-5">
                    <img t-if="res_company.logo" t-att-src="'data:image/png;base64,%s' % res_company.logo" style="max-height:120px"/>
                </div>
                <div class="col-xs-5">
                    <h4 class="text-right">Herramientas de Trabajo</h4>
                </div>
            </div>
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <td><strong>Trabajo:</strong></td>
                        <td><span t-field="o.work_id"/></td>
                    </tr>
                </tbody>
            </table>

            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th>Item</th>
                        <th>Cant</th>
                        <th colspan="3">Serie(s)</th>
                    </tr>
                </thead>
                <tbody class="invoice_tbody">
                    <t t-foreach="o.items" t-as="item">
                        <tr>
                            <td><span t-field="item.product_id"/></td>
                            <td><span t-field="item.qty"/></td>
                            <td></td>
                        </tr>
                    </t>
                </tbody>
            </table>
            <div class="footer">
                <p><strong>NOTA:</strong>FIRMA DE RESPONSABILIDAD.</p>
                <div class="row mt32 mb32">
                    <div class="col-xs-5">
                        <p class="text-center">______________________________</p>
                        <p class="text-center">Entrega</p>
                    </div>
                    <div class="col-xs-5">
                        <p class="text-center">______________________________</p>
                        <p class="text-center">Recibe</p>
                    </div>
                </div>
            </div>
        </div>
    </t>
</template>

<template id="work_report">
    <t t-call="report.html_container">
        <t t-foreach="doc_ids" t-as="doc_id">
            <t t-raw="translate_doc(doc_id, doc_model, 'lang', 'o2s_sale_contract.work_report_document')"/>
        </t>
    </t>
</template>
</data>
</openerp>
