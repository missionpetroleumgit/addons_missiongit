        <record id="view_o2s_add_button_inherit_form_view" model="ir.ui.view">
            <field name="name">stock.picking.add.button.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="///form/header/button[@name='action_cancel']" position="after">
                    <button name="picking_to_draft" attrs="{'invisible':['|', ('returns','=', False), ('state', 'not in', ('cancel', 'done'))]}"
                            string="Cambiar a Borrador" groups="base.group_user" type="object"/>
                </xpath>
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="returns" invisible="1"/>
                </xpath>
            </field>
        </record>
        <record id="view_add_date_field_inherit_form_view" model="ir.ui.view">
            <field name="name">stock.picking.add.field.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/group/group/field[@name='min_date']" position="after">
                    <field name="reception_date"/>
                </xpath>
            </field>
        </record>

        <record id="view_add_motive_stock_picking_inherit_form_view" model="ir.ui.view">
            <field name="name">stock.move.add.motive.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/notebook/page[@string='Operations']/field/tree/field[@name='result_package_id']" position="after">
                    <field name="motive" invisible="1"/>
                    <field name="name" invisible="1"/>
                </xpath>
            </field>
        </record>

