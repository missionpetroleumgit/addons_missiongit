        <record id="view_o2s_add_typereception_serviceticket_inherit" model="ir.ui.view">
            <field name="name">stock.picking.serviceticket.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="type_reception"/>
                    <field name="electronic_guide"/>
                    <field name="picking_ty" invisible="True"/>
                </xpath>
                <xpath expr="//field[@name='origin']"  position="attributes">
                    <attribute name="string">Orden</attribute>
                    <attribute name="required">1</attribute>
                </xpath>
            </field>
        </record>

        <record id="view_stock_picking_inh_form" model="ir.ui.view">
            <field name="name">view.stock.picking.inh.form</field>
            <field name="type">form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="o2s_felectronica.view_stock_picking_electronica_form" />
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@string='Informacion Transportista-Destinatario']" position="after">
                    <page string="Guía de Recepción" attrs="{'invisible':[('picking_ty','not in',('incoming'))]}">
                        <group col="4">
                            <field name="reception_guide" width="50" attrs="{'invisible':[('picking_ty','not in',('incoming'))]}"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>



