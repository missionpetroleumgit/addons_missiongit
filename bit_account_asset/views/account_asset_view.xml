<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Asset category -->
        <record id="view_bit_account_asset_category_form" model="ir.ui.view">
            <field name="name">account.asset.category.inherit</field>
            <field name="model">account.asset.category</field>
            <field name="inherit_id" ref="account_asset.view_account_asset_category_form"/>
            <field name="arch" type="xml">
                <field name="account_expense_depreciation_id" position="after">
                    <field name="account_cost_id"/>
                </field>
                <field name="account_analytic_id" position="attributes">
                    <attribute name="readonly">1</attribute>
                </field>
                <field name="prorata" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="open_asset" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
            </field>
        </record>


        <!-- Asset -->
        <!-- Form -->
        <record id="view_bit_account_asset_asset_form" model="ir.ui.view">
            <field name="name">account.asset.asset.form</field>
            <field name="model">account.asset.asset</field>
            <field name="inherit_id" ref="account_asset.view_account_asset_asset_form"/>
            <field name="arch" type="xml">
                <field name="prorata" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="partner_id" position="attributes">
                    <attribute name="readonly">1</attribute>
                </field>
                <field name="purchase_date" position="after">
                    <field name="asset_type" required='1'/>
                    <field name="analytics_id" required='1'/>
                    <field name="invoice_id" string="Factura"/>
                </field>
                <xpath expr="//notebook" position="inside">
                    <page string="Datos adicionales">
                        <group col="4" colspan="4">
                            <field name="responsible"/>
                            <field name="case"/>
                            <field name="marck"/>
                            <field name="model"/>
                            <field name="color"/>
                            <field name="serial"/>
                            <field name="identification"/>
                            <field name="delivery_date"/>
                            <field name="cilin"/>
                            <field name="motor"/>
                        </group>
                        <field name="note" placeholder="DescripciÃ³n..."/>
                    </page>
                </xpath>
            </field>
        </record>

        <!-- Supplier Account Invoice -->
        <!-- Form -->
        <record id="view_bit_ass_invoice_supplier_form" model="ir.ui.view">
            <field name="name">account.invoice.supplier.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="bit_account.view_bit_invoice_supplier_form"/>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_line']/tree/field[@name='account_id']" position="attributes">
                    <attribute name="attrs">{'readonly':[('asset_category_id', '!=', False)]}</attribute>
                </xpath>
            </field>
        </record>

