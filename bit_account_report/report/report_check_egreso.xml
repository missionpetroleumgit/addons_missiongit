<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="report_check_egreso">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="o">
            <!-- This report is (obviously) a work in progress -->
            <div class="page">
                    <table class="table table-condensed table-bordered">
                       <tr >
	                       <td align="center"><img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo" style="max-height:80px"/></td>
	                       <td align="center"><h4><strong><span t-field="o.company_id.partner_id" t-field-options='{"widget": "contact", "fields": ["name"], "no_marker": true, "no_tag_br": true}'/></strong></h4><span t-field="o.company_id.partner_id" t-field-options='{"widget": "contact", "fields": ["address"], "no_marker": true, "no_tag_br": true}'/></td>
                       </tr>
                       <tr >
                       	<td align="center"><h9><strong>RUC: </strong><span t-esc="o.company_id.partner_id.part_number"/></h9></td>
                        <td align="center"><h5><strong>Comprobante de Egreso</strong></h5></td>
                       </tr>
        			</table>
				<div class="row mt32 mb32" style="top:0px">
					<div class="col-xs-4">
						<strong>RUC: </strong><span t-esc="o.partner_id.part_number"/>
					</div>
					<div >
						<div t-if="get_amount(o.line_ids) &lt; 0" class="col-xs-8">
							<strong>Comprobante de egreso Nro: </strong><span t-esc="o.name"/>
						</div>
						<div t-if="get_amount(o.line_ids) &gt; 0" class="col-xs-8">
							<strong>Comprobante de ingreso Nro: </strong><span t-esc="o.name"/>
						</div>
		        		<div class="col-xs-4">
			                Quito, <span t-esc="formatLang(o.date , date=True)"/><br/>
		        		</div>
					</div>
				</div>
				
				<div class="row mt32 mb32">
					<div class="col-xs-7">
						<strong>Cliente: </strong><span t-field="o.partner_id.name" /><br/>
						<strong>Banco: </strong><span t-esc="o.journal_id.name"/><br/>
						<strong>Concepto: </strong><span t-esc="o.reference"/><br/>
					</div>
					<div class="col-xs-5">
						<strong>Nro de extracto: </strong><span t-esc="o.name"/><br/>
						<strong>Referencia: </strong><span t-esc="get_ref(o.line_ids)"/><br/>
						<strong>Fecha impresión: </strong><span t-esc="date_now"/><br/>
						<div t-if="get_check_number(o.id)" >
							<strong>Nro de cheque: </strong>
							<span t-esc="get_check_number(o.id)" />
						</div>
					</div>
				</div>
				
				<div class="row mt32 mb32">
	                <table class="table table-condensed">
	                    <thead>
	                        <tr>
	                            <th>CUENTA</th>
	                            <th>Descripción</th>
	                            <th>Ref.</th>
	                            <th>Concepto</th>
	                            <th>Débito</th>
	                            <th>Crédito</th>
	                        </tr>
	                    </thead>
	                    <tbody>
	                        <tr t-foreach="get_lines(o.move_ids)" t-as="l">
		                        <td><span t-esc="l['account_id']"/></td>
		                        <td><span t-esc="l['description']"/></td>
		                        <td><span t-esc="l['ref']"/></td>
		                        <td><span t-esc="l['name']"/></td>
		                        <td class="text-right"><span t-esc="l['debit']"/></td>
		                        <td class="text-right"><span t-esc="l['credit']"/></td>
	                        </tr>
	                    </tbody>
	                </table>
					<table class="table table-condensed">
						<tr>
							<td class="col-xs-7">
								<strong>En letras: </strong><span t-esc="get_amount_in_letters(o.line_ids)" />
							</td>
							<th></th>
								<th></th>
								<th></th>
								<th></th>
								<th></th>
							<th class="col-xs-2">
								<strong>Total asiento: </strong>
							</th>
							<div align="center" class="col-xs-3">
								<th></th>
								<th >
									<span t-esc="get_debit(o.move_ids)" />
								</th>
								<th></th>
								<th></th>
								<th >
									<span t-esc="get_credit(o.move_ids)" />
								</th>
							</div>
						</tr>
					</table>
				</div>
				<tr>
					<td>
					</td>
				</tr>
				<div style="position:absolute;top:580px;width:98%;">
                    <table class="table table-condensed table-bordered" >
                        <tr>
                            <td align="center">____________________</td>
                            <td align="center">____________________</td>
                            <td align="center">____________________</td>
                            <td align="center">____________________</td>
                        </tr>
                        <tr>
                            <td align="center" class="col-xs-3">
								<strong>Preparado por: </strong><br/>
							</td>
							<td align="center" class="col-xs-3">
								<strong>Aprobado por: </strong><br/>
							</td>
							<td align="center" class="col-xs-3">
								<strong>Contabilizado: </strong><br/>
							</td>
							<td align="center" class="col-xs-3">
								<strong>Recibí conforme: </strong><br/>
							</td>
                        </tr>
        			</table>
				</div>
            </div>
        </t>
    </t>
</template>
</data>
</openerp>
