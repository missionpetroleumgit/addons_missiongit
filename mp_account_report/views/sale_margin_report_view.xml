<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_stock_margin_inventory_form" model="ir.ui.view">
            <field name="name">Margen de Contribucion</field>
            <field name="model">stock.margin.inventory</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <sheet>
                    <form string="Margen de Contribucion" version="7.0">
                        <separator string="Seleccione Compania Reporte" colspan="4" />
                        <group colspan="4" col="2">
                            <field name="company_id" required="1"/>
                            <field name="type"/>
                        </group >
                        <separator string="Seleccione Producto (Vacio para sacar todos)" colspan="4"
                                   attrs="{'invisible':['|', ('type','=','category'), ('type', '=', False)]}"/>
                        <group colspan="4" col="2" attrs="{'invisible':['|', ('type','=','category'), ('type', '=', False)]}">
                            <field name="product_id" domain="[('default_code', 'not ilike', '%RPR%')]"/>
                        </group >
                        <separator string="Seleccione Categoria (Vacio para sacar todos)" colspan="4"
                                   attrs="{'invisible':['|', ('type','=','product'), ('type', '=', False)]}"/>
                        <group colspan="4" col="2" attrs="{'invisible':['|', ('type','=','product'), ('type', '=', False)]}">
                            <field name="category_id"/>
                        </group >
                        <separator string="Seleccione Fechas Corte Reporte" colspan="4" />
                        <group colspan="4" col="4">
                            <field name="date_from" required="1"/>
                            <field name="date_to" required="1"/>
                        </group >
                        <!--  separator string="Ingrese Ruta Guardar Reporte" colspan="4" / -->
                        <!--   group colspan="4" col="4">
                             <field name="path" />
                        </group -->
                        <field name="id" invisible="1"/>
                        <separator string="Acciones" colspan="4" />
                        <button name="action_excel" type="object" string="Generar archivo" />
                        <!--<separator string="Reporte Generado" colspan="4" />-->
                        <!--<group colspan="4" col="4">-->
                        <!--<field nolabel ="1" name="name" readonly="1"/>-->
                        <!--<field nolabel ="1" name="data" readonly="1"/>-->
                        <!--</group >-->
                    </form>
                </sheet>
            </field>
        </record>


        <record id="action_stock_margin_inventory" model="ir.actions.act_window">
            <field name="name">Margen de Contribucion</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.margin.inventory</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">current</field>
            <field name="view_id" ref="view_stock_margin_inventory_form"/>
        </record>

        <menuitem id="menu_action_stock_margin_inventory" action="action_stock_margin_inventory" parent="base.next_id_64" sequence="9"/>

    </data>
</openerp>