<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_purchase_order_invoice_report_form" model="ir.ui.view">
            <field name="name">view.purchase.order.invoice.report.form</field>
            <field name="model">purchase.order.invoice.report</field>
            <field name="arch" type="xml">
                <form string="Reporte Compra Factura" version="7.0">
                    <sheet>
                        <group col="1" colspan="2">
                            <separator string="Seleccione rango de fechas"/>
                            <div>
                                <div>
                                    <field name="date_from" style="width: 30%" required="1"/>
                                    <field name="date_to" style="width: 30%" required="1"/>
                                </div>
                            </div>
                            <group col="2">
                                <field name="partner_id" options="{'no_create': True, 'no_open':True}"/>
                                <field name="pit_id" options="{'no_create': True, 'no_open':True}"/>
                                <field name="fields_id" options="{'no_create': True, 'no_open':True}"/>
                                <field name="business_unit_id" options="{'no_create': True, 'no_open':True}"/>
                                <field name="account_analytic_id" options="{'no_create': True, 'no_open':True}"/>
                            </group>
                            <field name="id" invisible="1"/>
                            <field name="type_export"/>
                        </group>
                        <button name="excel_action" type="object" string="Imprimir" attrs="{'invisible': [('id','=',False)]}"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_purchase_order_invoice_report" model="ir.actions.act_window">
            <field name="name">Reporte Facturas Compras</field>
            <field name="res_model">purchase.order.invoice.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="context">{}</field>
            <field name="target">current</field>
        </record>

        <menuitem action="action_purchase_order_invoice_report"
                  id="menu_action_purchase_order_invoice_report"
                  parent="base.next_id_73"
                  string="Reporte Facturas Compras"/>
    </data>
</openerp>
