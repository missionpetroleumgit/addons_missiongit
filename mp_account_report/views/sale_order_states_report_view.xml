<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_sale_order_states_report_form" model="ir.ui.view">
            <field name="name">view.sale.states.report.form</field>
            <field name="model">sale.order.states.report</field>
            <field name="arch" type="xml">
                <form string="Reportes Ordenes de Venta" version="7.0">
                <sheet>
                    <group col="1" colspan="2">
                        <separator string="Seleccione rango de fechas"/>
                        <div>
						<div>
							<field name="date_from" style="width: 30%" required="1"/>
							<field name="date_to" style="width: 30%" required="1"/>
						</div>
					</div>
                        <separator string="Cliente"/>
                       	<field name="partner_id" nolabel="1" options="{'no_create': True, 'no_open':True}"/>
                        <field name="id" invisible="1"/>
                        <field name="state"/>
                        <field name="out_ship"/>
                        <field name="type_export"/>
                    </group>
                    <button name="excel_action" type="object" string="Imprimir" attrs="{'invisible': [('id','=',False)]}"/>
                </sheet>
                </form>
            </field>
        </record>

        <record id="action_sale_states_report_form" model="ir.actions.act_window">
            <field name="name">Ventas por Estado</field>
            <field name="res_model">sale.order.states.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="context">{}</field>
            <field name="target">current</field>
        </record>

       <menuitem action="action_sale_states_report_form" id="menu_action_sale_states_report_form" parent="base.next_id_64"
                 string="Reporte Ventas"/>
    </data>
</openerp>
