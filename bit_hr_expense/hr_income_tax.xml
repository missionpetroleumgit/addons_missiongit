<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Income Taxes -->

        <record id="view_income_tax_tree" model="ir.ui.view">
            <field name="name">hr.income.tax.tree</field>
            <field name="model">hr.income.tax</field>
            <field name="arch" type="xml">
                <tree string="Income Taxes">
                    <field name="name"/>
                    <field name="fiscalyear_id"/>
<!--                     <field name="company_id"/> -->
                </tree>
            </field>
        </record>

        <record id="view_income_tax_form" model="ir.ui.view">
            <field name="name">hr.income.tax.form</field>
            <field name="model">hr.income.tax</field>
            <field eval="25" name="priority"/>
            <field name="arch" type="xml">
                <form string="Income Tax">
                <header>
                    <button name="confirm" states="draft" string="Confirmar" type="object" class="oe_highlight"/>
                    <!--<button name="draft" states="confirm,cancelled" string="Set to Draft" type="workflow" groups="base.group_hr_user" />-->
                    <button name="cancel" string="Cancelar" type="object"/>
                    <field name="state" widget="statusbar" statusbar_visible="confirm,draft,cancel" statusbar_colors='{"confirm":"blue","cancelled":"red"}'/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="fiscalyear_id"/>                            
                        </group>
                        <group>
<!--                             <field name="company_id"/> -->
                            <field name="currency_id"/>                            
                        </group>                        
                    </group>
                    <div>
                      	<field name="tax_lines" nolabel="1" string="Unit Of Currency Definition">
                              <tree string="Tax Lines" editable="bottom">
                                  <field name="basic_fraction" />
                                  <field name="excess_up" />
                                  <field name="tax_basic_fraction" />
                                  <field name="tax_surplus_fraction" />
                                  <field name="currency_id" />
                              </tree>
                          </field>
                     </div>
                </sheet>
                </form>
            </field>
        </record>


        <record id="view_hr_income_tax_filter" model="ir.ui.view">
            <field name="name">hr.income.tax.filter</field>
            <field name="model">hr.income.tax</field>
            <field name="arch" type="xml">
                <search string="Income Taxes">
                    <field name="name" string="Income Tax"/>
                    <field name="fiscalyear_id"/>
                    <filter icon="terp-document-new" domain="[('state','=','draft')]" string="New" help="New Expense"/>
                    <filter icon="terp-camera_test" domain="[('state','=','confirm')]" string="To Approve" help="Confirmed Expenses"/>
                    <separator/>                    
                    <group expand="0" string="Group By">
                        <filter string="Fiscal Year" icon="terp-personal" domain="[]" context="{'group_by':'fiscalyear_id'}"/>                        
                    </group>
                </search>
            </field>
        </record>

        <record id="hr_income_tax_action" model="ir.actions.act_window">
            <field name="name">Income Tax</field>
            <field name="res_model">hr.income.tax</field>
            <field name="view_type">form</field>
            <field name="search_view_id" ref="view_hr_income_tax_filter"/>
            <field name="view_id" ref="view_income_tax_tree"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to configure income taxes. 
              </p><p>
                Odoo will ensure the whole process is followed; the expense
                sheet is validated by manager(s), the employee is reimbursed
                from his expenses, some expenses must be re-invoiced to the
                customers.
              </p>
            </field>
        </record>

        <menuitem action="hr_income_tax_action" id="hr_income_tax_menu" name="Tabla de Impuestos" parent="hr.menu_hr_configuration"/>
		
