<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>

        <record id="product_template_form_view_rest" model="ir.ui.view">
			<field name="name">product_template_form_view_rest</field>
			<field name="model">product.template</field>
			<field name="inherit_id" ref="product.product_template_form_view"/>
			<field name="arch" type="xml">
                <field name="seller_ids" position="attributes">
                    <attribute name="context">{'company_id': company_id}</attribute>
                </field>
            </field>
		</record>

        <record id="product_template_tree_view_rest" model="ir.ui.view">
			<field name="name">product_template_tree_view_rest</field>
			<field name="model">product.template</field>
			<field name="inherit_id" ref="product.product_template_tree_view"/>
			<field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="company_id"/>
					<field name="default_code"/>
                </field>
            </field>
		</record>

        <record id="product_product_tree_view_rest" model="ir.ui.view">
			<field name="name">product_product_tree_view_rest</field>
			<field name="model">product.product</field>
			<field name="inherit_id" ref="product.product_product_tree_view"/>
			<field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="company_id"/>
                </field>
            </field>
		</record>

