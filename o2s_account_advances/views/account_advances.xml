            <field name="arch" type="xml">
                <form string="Pagos">
                    <header>
                        <button name="validate_advance_some" string="Validar" type="object" states="draft" class="oe_highlight"/>
                        <button name="cancel_advance" string="Cancel Voucher" type="object" states="posted" confirm="Are you sure you want to unreconcile this record?"/>
                        <button name="action_advance_draft" type="object" states="cancel" string="Set to Draft"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,posted" statusbar_colors='{"proforma":"blue"}'/>
