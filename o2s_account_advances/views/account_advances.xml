        <record model="ir.actions.act_window" id="action_voucher_list_somepays">
            <field name="name">Pagos Varios</field>
            <field name="res_model">account.voucher</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,graph</field>
            <field name="context">{'default_type': 'some_pays', 'form_view_ref':'o2s_account_advance.action_journal_voucher_form_somepays'}</field>
