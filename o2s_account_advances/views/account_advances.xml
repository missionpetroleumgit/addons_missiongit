            <field name="inherit_id" ref="account_voucher.view_vendor_receipt_form"/>
            <field name="arch" type="xml">
                <field name="number" position="before">
                    <div class="oe_right oe_button_box" name="import_buttons">
                        <button name="print_pay" class="oe_inline oe_stat_button" widget="statinfo" string="Imprimir" icon="fa-check-square-o" type="object"/>
                    </div>
                </field>
            </field>
        </record>

        <!-- Payment - Account voucher -->
        <record model="ir.ui.view" id="view_voucher_payment_add_invoice_field_form">
