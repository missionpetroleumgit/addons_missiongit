        <record id="view_vendor_payment_form_inherit_button_print" model="ir.ui.view">
            <field name="name">account.voucher.form.button.print</field>
            <field name="model">account.voucher</field>
            <field name="inherit_id" ref="account_voucher.view_vendor_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/field[@name='pre_line']" position="after">
                    <group>
                        <field name="grouped_report"/>
                    </group>
                </xpath>
                <xpath expr="//form/sheet/field[@name='pre_line']" position="before">
                    <div class="oe_right oe_button_box" name="import_buttons">
                        <button name="print_pay" class="oe_inline oe_stat_button" widget="statinfo" string="Imprimir" icon="fa-check-square-o" type="object"/>
                    </div>
                </xpath>
            </field>
        </record>

