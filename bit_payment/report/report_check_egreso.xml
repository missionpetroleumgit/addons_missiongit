<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="report_check_egreso">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <div class="row mt32 mb32">
                            <div class="col-xs-6">
                                <tr>
                                    <td>
                                        <span style="color:white !important">-----</span><img t-if="res_company.logo" t-att-src="'data:image/png;base64,%s' % res_company.logo" style="max-height:100px"/>
                                    </td>
                                </tr>
                            </div>
                            <div class="col-xs-6">
                                <td class="text-center">
                                    <p><span style="color:white !important">-------------------</span></p>
                                </td>
                            </div>
                            <div class="col-xs-6">
                                <td class="text-left">
                                    <t t-if="o.type=='receipt'">
                                        <h4> <strong><p><span style="color:white !important">-----------</span><span style="color:darkblue !important">COMPROBANTE DE INGRESO</span></p></strong></h4>
                                    </t>
                                    <t t-if="(o.type in ('payment', 'advance', 'some_pays'))">
                                        <h4> <strong><p><span style="color:white !important">-----------</span><span style="color:darkblue !important">COMPROBANTE DE EGRESO</span></p></strong></h4>
                                    </t>
                                </td>
                            </div>
                            <div class="col-xs-6">
                                <td class="text-left">
                                    <h4><strong><span style="color:white !important">-------------------------</span><span style="color:red !important">N° </span><span style="color:red !important" t-field="o.number"/></strong></h4>
                                </td>
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <td class="text-left">
                                <span style="color:darkblue !important;font-size:10px" t-esc="date_now"/>
                            </td>
                        </div>
                        <div class="col-xs-12">
                            <strong><span style="color:white !important">--- </span></strong><br/>
                        </div>
                        <div class="col-xs-12">
                            <div style="border-bottom: 4px solid darkblue;"/>
                        </div>
                        <div class="col-xs-3">
                            <div style="border-left: 1px solid red; margin-left: 30px;"/>
                        </div>
                        <div class="col-xs-12">
                            <strong><span style="color:white !important">--- </span></strong><br/>
                        </div>
                        <div class="row mt32 mb32">
                            <div class="col-xs-7">
                                <t t-if="o.type=='receipt'">
                                    <strong><span style="color:white !important">-----</span><span style="color:darkblue !important;font-size:15px">Cliente: </span></strong><span style="color:darkblue !important;font-size:14px" t-field="o.partner_id.name"/><br/>
                                </t>
                                <t t-if="(o.type in ('payment', 'advance'))">
                                    <strong><span style="color:white !important">-----</span><span style="color:darkblue !important;font-size:15px">Cliente: </span></strong><span style="color:darkblue !important;font-size:14px" t-field="o.partner_id.name"/><br/>
                                </t>
                                <t t-if="o.type =='some_pays'">
                                    <strong><span style="color:white !important">-----</span><span style="color:darkblue !important;font-size:15px">Cliente: </span></strong><span style="color:darkblue !important;font-size:14px" t-field="o.benef"/><br/>
                                </t>
                                <t t-if="(o.type in ('payment', 'advance'))">
                                    <strong><span style="color:white !important">-----</span><span style="color:darkblue !important;font-size:15px">RUC: </span></strong><span style="color:darkblue !important;font-size:14px" t-field="o.partner_id.part_number"/><br/>
                                </t>
                                <strong><span style="color:white !important">-----</span><span style="color:darkblue !important;font-size:15px">Periodo: </span></strong><span style="color:darkblue !important;font-size:14px" t-esc="o.period_id.code"/><br/>
                                <t t-if="o.reference">
                                    <t t-if="(o.type == 'receipt')">
                                        <strong><span style="color:white !important">-----</span><span style="color:darkblue !important;font-size:15px">Referencia: </span></strong><span style="color:darkblue !important;font-size:14px" t-esc="o.reference"/><br/>
                                    </t>
                                </t>
                            </div>
                            <div class="col-xs-5">
                                <t t-if="o.is_etransfer">
                                    <t t-if="(o.type in ('payment', 'advance', 'some_pays'))">
                                        <strong><span style="color:white !important">-----</span><span style="color:darkblue !important;font-size:15px">Nro Transferencia: </span></strong><span style="color:darkblue !important;font-size:14px" t-esc="o.electronic_transfer_ref"/><br/>
                                    </t>
                                </t>
                                <t t-if="o.is_check">
                                    <t t-if="(o.type in ('payment', 'advance', 'some_pays'))">
                                        <strong><span style="color:white !important">-----</span><span style="color:darkblue !important;font-size:15px">Nro de Cheque: </span></strong><span style="color:darkblue !important;font-size:14px" t-esc="o.no_cheque"/><br/>
                                    </t>
                                </t>
                                <strong><span style="color:white !important">-----</span><span style="color:darkblue !important;font-size:15px">Diario: </span></strong><span style="color:darkblue !important;font-size:14px" t-esc="o.journal_id.name"/><br/>
                                <strong><span style="color:white !important">-----</span><span style="color:darkblue !important;font-size:15px">Fecha Emisión: </span></strong><span style="color:darkblue !important;font-size:14px" t-field="o.date"/><br/>
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <div style="border-bottom: 4px solid darkblue;"/>
                        </div>
                        <div class="col-xs-12">
                            <strong><span style="color:white !important">--- </span></strong><br/>
                        </div>
                        <div class="col-xs-12">
                            <t t-if="o.reference">
                                <t t-if="(o.type == 'advance')">
                                    <strong><span style="color:darkblue !important;font-size:15px">Concepto: </span></strong><span style="color:darkblue !important;font-size:14px" t-esc="o.reference"/><br/>
                                </t>
                                <t t-if="(o.type in ('payment', 'some_pays'))">
                                    <strong><span style="color:darkblue !important;font-size:15px">Concepto: </span></strong><span style="color:darkblue !important;font-size:14px" t-esc="o.reference"/><br/>
                                </t>
                            </t>
                        </div>

                        <div class="col-xs-12">
                            <strong><span style="color:white !important">--- </span></strong><br/>
                        </div>
                        <div class="row mt32 mb32">
                            <table style="color:darkblue !important" class="table">
                                <thead>
                                    <t t-if="not o.grouped_report">
                                        <tr>
                                            <th class="text-center" width="15%">CODIGO</th>
                                            <th class="text-center" width="20%">CUENTA</th>
                                            <th class="text-center" width="20%">FACTURA</th>
                                            <th class="text-center" width="10%">DEBE</th>
                                            <th class="text-center" width="10%">HABER</th>
                                        </tr>
                                    </t>
                                    <t t-if="o.grouped_report">
                                        <tr>
                                            <th class="text-center" width="20%">CUENTA</th>
                                            <th class="text-center" width="10%">DEBE</th>
                                            <th class="text-center" width="10%">HABER</th>
                                        </tr>
                                    </t>
                                </thead>
                                <tbody>
                                    <t t-if="not o.grouped_report">
                                        <tr t-foreach="o.move_ids" t-as="l">
                                            <td class="text-center" width="10%"><span t-field="l.account_id.code"/></td>
                                            <td class="text-center" width="10%"><span t-field="l.account_id.name"/></td>
                                            <td class="text-center" width="10%"><span t-field="l.other_ref"/></td>
                                            <td class="text-center" width="10%"><span t-field="l.debit"/></td>
                                            <td class="text-center" width="10%"><span t-field="l.credit"/></td>
                                        </tr>
                                    </t>
                                    <t t-if="o.grouped_report">
                                        <tr t-foreach="o.move_id.group_accounts(o.move_ids)" t-as="l">
                                            <t t-if="l['debit'] &gt; 0 or l['credit'] &gt; 0">
                                                <td class="text-center" width="10%"><span t-esc="l['account_id']"/></td>
                                                <td class="text-center" width="10%"><span t-esc="abs(l['debit'])"/></td>
                                                <td class="text-center" width="10%"><span t-esc="round(l['credit'],2)"/></td>
                                            </t>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                            <table style="color:darkblue !important" class="table table-condensed">
                                <tr>
                                    <!--<td class="col-xs-7">-->
                                    <!--<strong>En letras: </strong><span t-esc="get_amount_in_letters(o.line_ids)" />-->
                                    <!--</td>-->
                                    <th class="col-xs-2">
                                        <span style="color:white !important">Total asiento: </span>
                                    </th>
                                    <div align="center" class="col-xs-3">

                                        <th/>
                                        <th/>
                                        <th/>
                                        <th/>
                                        <th/>
                                        <th/>
                                        <th/>
                                        <th/>
                                        <th/>
                                        <th/>
                                        <th/>
                                        <th/>
                                        <th/>
                                        <th/>
                                        <th/>
                                        <th/>
                                        <th/>
                                        <th/>
                                        <th/>
                                        <th/>
                                        <th/>
                                        <th/>
                                        <th/>
                                        <th>
                                            <h5 class="text-center"><span t-esc="formatLang(get_debit(o.move_ids))"/></h5>
                                        </th>
                                        <th>
                                            <h5 class="text-center"><span t-esc="formatLang(get_credit(o.move_ids))"/></h5>
                                        </th>
                                    </div>
                                </tr>
                            </table>
                        </div>
                        <tr>
                            <td>
                            </td>
                        </tr>
                        <div class="col-xs-12">
                            <strong><span style="color:white !important">--- </span></strong><br/>
                        </div>
                        <table style="color:darkblue !important" class="table">
                            <div class="row mt16 mb16">
                                <div class="col-xs-4">
                                    <strong><span style="color:darkblue !important">_______________________ </span></strong><br/>
                                </div>
                                <div class="col-xs-4">
                                    <strong><span style="color:darkblue !important">_______________________</span> </strong><br/>
                                </div>
                                <div class="col-xs-4">
                                    <strong><span style="color:darkblue !important">_______________________ </span></strong><br/>
                                </div>
                            </div>
                            <div class="row mt16 mb16">
                                <div class="col-xs-4">
                                    <strong><span style="color:white !important">--------</span><span style="color:darkblue !important">Elaborado por:</span></strong><br/>
                                </div>
                                <div class="col-xs-4">
                                    <strong><span style="color:white !important">--------</span><span style="color:darkblue !important">Revisado por:  </span></strong><br/>
                                </div>
                                <div class="col-xs-4">
                                    <strong><span style="color:white !important">--------</span><span style="color:darkblue !important">Recibí Conforme: </span></strong><br/>
                                </div>
                            </div>
                        </table>
                    </div>
                </t>
            </t>
        </template>
    </data>
</openerp>
