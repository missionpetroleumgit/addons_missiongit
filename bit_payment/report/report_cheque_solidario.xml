<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<template id="report_hor_cheque_solidario">
		    <t t-call="report.html_container">
		        <t t-foreach="docs" t-as="o">
		            <!-- This report is (obviously) a work in progress -->
		            <div class="page">
		            	<div t-if="True">
				   <div class="row mt32 mb32">
						<div class="col-xs-9" style="position:absolute;left:60;top:2px;font-size: 16px">
				        		<t t-if="o.check">
					                <address t-field="o.benef"/>
					            </t>
					            <t t-if="not o.check">
					                <address t-field="o.partner_id.name"/>
					            </t>
				        		</div>
								<div class="col-xs-3" style="position:absolute;left:575;top:-1px;font-size: 19px">
						                ***<span t-esc="o.to_string(o.amount)"/><br/>
				        		</div>
			            	</div>
			            	<div class="row mt32 mb32">
			            		<div class="col-xs-12" style="position:absolute;left:60;top:40px;font-size: 16px">
			            			<span t-esc="get_amount_in_letters(o.amount)"/>
			            		</div>
							</div>
		            		<div class="row mt32 mb32">
				        		<div class="col-xs-12" style="position:absolute;left:55;top:95px;font-size: 16px">
					                Quito, <span t-esc="get_format(o.date)"/><br/>
				        		</div>
				       	</div>
				</div>
		            </div>
		        </t>
		    </t>
		</template>
	</data>
</openerp>


