<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<template id="report_check_bco_internacional">
			<t t-call="report.html_container">
				<t t-foreach="docs" t-as="o">
					<div class="page">
						<!-- cheque internacional extracto -->
						<div t-if="True">
							<div class="row mt32 mb32">
								<div class="col-xs-9" style="position:absolute;left:40;top:60px;font-size: 14px">
									<t t-if="o.check">
										<address t-field="o.benef"/>
									</t>
									<t t-if="not o.check">
										<address t-field="o.partner_id.name"/>
									</t>
								</div>
								<div class="col-xs-3" style="position:absolute;left:520;top:55px;font-size: 16px">
									***<span t-esc="o.to_string(o.amount)"/><br/>
								</div>
							</div>
							<div class="row mt32 mb32">
								<div class="col-xs-12" style="position:absolute;left:40;top:90px;font-size: 14px">
									<span t-esc="get_amount_in_letters(o.amount)"/>
								</div>
							</div>
							<div class="row mt32 mb32">
								<div class="col-xs-12" style="position:absolute;left:5;top:145px;font-size: 14px">
									Ibarra, <span t-esc="get_format(o.date)"/><br/>
								</div>
							</div>
						</div>
					</div>
				</t>
			</t>
		</template>
	</data>
</openerp>


