<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="report_statement_inter_check">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <!-- Cheque pacifico extracto -->
                        <div t-if="True">
                            <div class="row mt32 mb32">
                                <div class="col-xs-9" style="position:absolute;left:70;top:61px;font-size: 14px">
                                    <address t-field="o.partner_id.name"/>
                                </div>
                                <div class="col-xs-3" style="position:absolute;left:480;top:64px;font-size: 16px">
                                    ***<span t-esc="o.to_string(o.amount)"/><br/>
                                </div>
                            </div>
                            <div class="row mt32 mb32">
                                <div class="col-xs-12" style="position:absolute;left:40;top:90px;font-size: 14px">
                                    <span t-esc="get_amount_in_letters(o.amount)"/>
                                </div>
                            </div>
                            <div class="row mt32 mb32">
                                <div class="col-xs-12" style="position:absolute;left:5;top:150px;font-size: 14px">
                                    Ibarra, <span t-esc="get_format(o.date)"/><br/>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </template>
    </data>
</openerp>

