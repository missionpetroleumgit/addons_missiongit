<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_mrp_production_order_report_form" model="ir.ui.view">
            <field name="name">view.mrp.production.order.report.form</field>
            <field name="model">mrp.production.order.report</field>
            <field name="arch" type="xml">
                <form string="Reportes de Produccion" version="7.0">
                    <sheet>
                        <group col="1" colspan="2" attrs="{'invisible': [('production_id','!=', False)]}">
                            <separator string="Seleccione rango de fechas"/>
                            <div>
                                <div>
                                    <field name="date_from" style="width: 30%"
                                           attrs="{'required': [('production_id','=', False)]}"/>
                                    <field name="date_to" style="width: 30%"
                                           attrs="{'required': [('production_id','=', False)]}"/>
                                </div>
                            </div>
                        </group>
                        <group>
                            <separator string="Seleccione Opciones"/>
                        </group>
                        <group>
                            <separator string="Proveedor" attrs="{'invisible': [('production_id','!=', False)]}"/>
                            <group col="2" colspan="2">
                                <field name="partner_id" nolabel="1" options="{'no_create': True, 'no_open':True}"
                                       attrs="{'invisible': [('production_id','!=', False)]}"/>
                            </group>
                            <group col="2" colspan="2">
                                <field name="production_id"
                                       options="{'no_create': True, 'no_open':True}"
                                       attrs="{'invisible': [('date_from','!=', False),
                                                            ('date_to', '!=', False)]}"/>
                                <field name="type" attrs="{'invisible': [('production_id','!=', False)]}"/>
                            </group>
                            <field name="id" invisible="1"/>
                            <field name="type_export"/>
                        </group>
                        <button name="excel_action" type="object" string="Imprimir"
                                attrs="{'invisible': [('id','=',False)]}"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_mrp_production_order_report_report" model="ir.actions.act_window">
            <field name="name">Reporte Produccion</field>
            <field name="res_model">mrp.production.order.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="context">{}</field>
            <field name="target">current</field>
        </record>

        <menuitem id="menu_action_mrp_production"
                  parent="base.menu_reporting"
                  sequence="10"
                  string="Produccion"/>

        <menuitem action="action_mrp_production_order_report_report"
                  id="menu_action_mrp_production_order_report_report"
                  parent="menu_action_mrp_production"
                  sequence="1"
                  name="Reporte ProducciÃ³n"/>
    </data>
</openerp>
