            <field name="view_mode">tree,form,calendar,graph</field>
            <field name="context">{'search_default_my_mrp_orders_filter': 1, 'default_type': 'service'}</field>
            <field name="domain">[('type', '=', 'service')]</field>
            <field name="search_view_id" ref="mrp.view_mrp_production_filter"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a assembly order, the first step.
                </p><p>
                Odoo will help you handle efficiently the complete mrp flow:
                from the manofacturing orders, the
                process, the final product entrance.
            </p>
            </field>
        </record>

        <menuitem
                parent="mrp.menu_mrp_manufacturing"
                id="mission_manufacturing_services_orders_menu"
                action="action_manufacturing_services_orders_view"
                string="Manofacturación de Servicios"
                sequence="3"/>

