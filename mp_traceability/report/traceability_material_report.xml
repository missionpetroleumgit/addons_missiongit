<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="traceability_material_report">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <tr t-foreach="pack_records(o.purchase_importation_id.id, o.product_ids)" t-as="pack">
                            <table style="width:100%;">
                                <tr>
                                    <td align="left">
                                        <img t-if="res_company.logo" t-att-src="'data:image/png;base64,%s' % res_company.logo" style="max-height:90px"/>
