<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="purchase_importation_view_inherit_form" model="ir.ui.view">
            <field name="name">purchase.importation.view.inherit.form</field>
            <field name="model">purchase.importation</field>
            <field name="inherit_id" ref="o2s_purchase_importation.form_purchase_importation"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/notebook/page[@string='DocumentaciÃ³n']" position="after">
                    <page string="Trazabilidad"
                          attrs="{'invisible': [('state','not in', ['customs', 'transit', 'done'])]}">
                        <group>
                            <field name="stock_traceability_ids">
                                <tree editable="top">
                                    <field name="product_id" required="1"/>
                                    <field name="product_uom_id"/>
                                    <field name="quantity"/>
                                    <field name="sourceloc_id"/>
                                    <field name="destinationloc_id"/>
                                    <field name="lot_id"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="stock_production_lot_view_inherit_form" model="ir.ui.view">
            <field name="name">stock.production.lot.inherit.form</field>
            <field name="model">stock.production.lot</field>
            <field name="inherit_id" ref="stock.view_production_lot_form"/>
            <field name="arch" type="xml">
                <field name="ref" position="after">
                    <group coslpan="4">
                        <field name="date_expiry"/>
                        <field name="location_id"/>
                        <field name="location_type"/>
                    </group>
                    <group>
                        <field style="color:green !important" name="traceability" string="Codigo trazabilidad"/>
                        <field name="id" invisible="1"/>
                    </group>
                </field>
                <page string="Products" position="after">
                    <page string="Colada">
                        <field name="heat_ids">
                            <tree editable="top">
                                <field name="name" required="1"/>
                                <field name="heat_treat_lot"/>
                                <field name="lot_id" invisible="1"/>
                            </tree>
                        </field>
                    </page>
                </page>
            </field>
        </record>

        <record id="view_stock_move_report_inherit" model="ir.ui.view">
            <field name="name">stock.move.report.inherit</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_form"/>
            <field name="arch" type="xml">
                <field name="location_dest_id" position="after">
                    <field name="importation_id" invisible="1"/>
                </field>
            </field>
        </record>

        <record id="view_stock_trasnfer_details_state_inherit" model="ir.ui.view">
            <field name="name">stock.transfer.details.state.inherit</field>
            <field name="model">stock.transfer_details</field>
            <field name="inherit_id" ref="stock.view_stock_enter_transfer_details"/>
            <field name="arch" type="xml">
                <xpath expr="//form/group/field/tree/field[@name='lot_id']" position="replace">
                    <field name="lot_id" groups="stock.group_production_lot"
                           domain="[('product_id','=?', product_id), ('location_type', '=', usage)]"
                           context="{'product_id': product_id}"/>
                    <field name="usage"/>
                </xpath>
            </field>
        </record>


    </data>
</openerp>