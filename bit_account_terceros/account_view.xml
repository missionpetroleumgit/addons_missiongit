<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

<!-- Tax Codes -->
	<!-- Search --> 
        <record id="view_bit_tax_code_search" model="ir.ui.view">
            <field name="name">account.tax.code.search</field>
            <field name="model">account.tax.code</field>
            <field name="inherit_id" ref="account.view_tax_code_search"/>
            <field name="arch" type="xml">
                <field name="name" position="before">
                	<field name="form"/>
                </field>
            </field>
        </record>
	<!-- Tree --> 
        <record id="view_bit_tax_code_tree" model="ir.ui.view">
            <field name="name">account.tax.code.tree</field>
            <field name="model">account.tax.code</field>
            <field name="field_parent">child_ids</field>
            <field name="inherit_id" ref="account.view_tax_code_tree"/>
            <field name="priority">100</field>
            <field name="arch" type="xml">
                <field name="name" position="after">
                	<field name="form"/>
                </field>
            </field>
        </record>
	<!-- Form --> 
        <record id="view_bit_tax_code_form" model="ir.ui.view">
            <field name="name">account.tax.code.form</field>
            <field name="model">account.tax.code</field>
            <field name="inherit_id" ref="account.view_tax_code_form"/>
            <field name="arch" type="xml">
                <field name="company_id" position="after">
                	<field name="form"/>
                </field>
            </field>
        </record>
        
        
<!-- Invoice Documents -->
	<!-- Search -->     
        <record id="view_bit_invoice_document_search" model="ir.ui.view">
            <field name="name">account.invoice.document.search</field>
            <field name="model">account.invoice.document</field>
            <field name="arch" type="xml">
            	<search string="Invoice document">
                    <field name="name"/>
                    <field name="code"/>
                </search>
            </field>
        </record>  
	<!-- Tree -->     
        <record id="view_bit_invoice_document_tree" model="ir.ui.view">
            <field name="name">account.invoice.document.tree</field>
            <field name="model">account.invoice.document</field>
            <field name="arch" type="xml">
            	<tree string="Invoice document">
                    <field name="name"/>
                    <field name="code"/>                    
                </tree>
            </field>
        </record>
 	<!-- Form -->         
        <record id="view_bit_invoice_document_form" model="ir.ui.view">
            <field name="name">account.invoice.document.form</field>
            <field name="model">account.invoice.document</field>
            <field name="arch" type="xml">
                <form string="Account Tax Code" version="7.0">
                    <group>
                        <group col="6" colspan="2">
                            <field name="name"/>
                            <field name="code"/>
                            <field name="is_retention"/>                          
                        </group>
                        <field name="support_ids"/>
                    </group>
                </form>
            </field>
        </record>
 	<!-- Action -->         
        <record id="action_bit_invoice_document" model="ir.actions.act_window">
            <field name="name">Documents type</field>
            <field name="res_model">account.invoice.document</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to define a new invoice document.
              </p><p>
                This document are use in the invoice creation.
              </p>
            </field>
        </record>
 	<!-- Menuitem -->
        <menuitem action="action_bit_invoice_document" id="menu_bit_invoice_document" parent="account.next_id_27" sequence="90" groups="base.group_no_one"/>
        
        
<!-- Tax support -->
	<!-- Search -->     
        <record id="view_bit_account_tax_support_search" model="ir.ui.view">
            <field name="name">account.tax.support.search</field>
            <field name="model">account.tax.support</field>
            <field name="arch" type="xml">
            	<search string="Tax support">
                    <field name="type"/>
                    <field name="code"/>
                </search>
            </field>
        </record>  
	<!-- Tree -->     
        <record id="view_bit_account_tax_support_tree" model="ir.ui.view">
            <field name="name">account.tax.support.tree</field>
            <field name="model">account.tax.support</field>
            <field name="arch" type="xml">
            	<tree string="Tax support">
                    <field name="type"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>
 	<!-- Form -->         
        <record id="view_bit_account_tax_support_form" model="ir.ui.view">
            <field name="name">account.tax.support.form</field>
            <field name="model">account.tax.support</field>
            <field name="arch" type="xml">
                <form string="Tax support" version="7.0">
                    <group>
                        <group col="4" colspan="2">
                            <field name="type"/>
                            <field name="code"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>
 	<!-- Action -->         
        <record id="action_bit_account_tax_support" model="ir.actions.act_window">
            <field name="name">Tax support</field>
            <field name="res_model">account.tax.support</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to define a new invoice document.
              </p><p>
                This document are use in the invoice creation.
              </p>
            </field>
        </record>
 	<!-- Menuitem -->
        <menuitem action="action_bit_account_tax_support" id="menu_bit_account_tax_support" parent="account.next_id_27" sequence="90" groups="base.group_no_one"/>

<!-- Fiscal Position -->
	<!-- Form -->   
		<record id="view_bit_account_position_form" model="ir.ui.view">
            <field name="name">account.fiscal.position.form</field>
            <field name="model">account.fiscal.position</field>
            <field name="inherit_id" ref="account.view_account_position_form"/>
            <field name="arch" type="xml">
                <field name="tax_ids" widget="one2many_list">
                    <tree string="Tax Mapping" editable="bottom">
                        <field name="tax_src_id" domain="[('parent_id','=',False)]"/>
                        <field name="tax_dest_id" />
                    </tree>
                    <form string="Tax Mapping">
                        <field name="tax_src_id" domain="[('parent_id','=',False)]"/>
                        <field name="tax_dest_id" />
                    </form>
                </field>                       
            </field>
        </record>

<!-- Taxes -->
	<!-- Form -->
        <record id="view_bit_tax_tree" model="ir.ui.view">
            <field name="name">account.tax.tree</field>
            <field name="model">account.tax</field>
            <field name="inherit_id" ref="account.view_tax_tree"/>
            <field name="field_parent">child_ids</field>
            <field name="arch" type="xml">
            	<field name="description" position="replace"/>
                <field name="name" position="before">
                    <field name="description"/>
                </field>
                <field name="name" position="after">
                    <field name="parent_id"/>
                </field>
            </field>
        </record>
	<!-- Form -->   
		<record id="view_bit_tax_form" model="ir.ui.view">
            <field name="name">account.tax.form</field>
            <field name="model">account.tax</field>
            <field name="inherit_id" ref="account.view_tax_form"/>
            <field name="arch" type="xml">
            	<field name="description" position="after">
                    <field name="parent_id" context="{ 'type_tax_use': type_tax_use }"/>
                </field>
                <field name="active" position="before">
                    <field name="is_iva"/>
                </field> 
            </field>
        </record>
        <record id="account.action_tax_form" model="ir.actions.act_window">
            <field name="name">Taxes</field>
            <field name="res_model">account.tax</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="account.view_tax_tree"/>
            <field name="domain"></field>
        </record>
   <!--        
        <record id="view_bit_bank_statement_form" model="ir.ui.view">
            <field name="name">account.bank.statement.form</field>
            <field name="model">account.bank.statement</field>
            <field name="inherit_id" ref="account.view_bank_statement_form"/>
            <field name="arch" type="xml">
                <field name="journal_id" position="before">
                    <field name="pay_mode_id" on_change="onchange_pay_mode(pay_mode_id, context)"/>
                </field>            
            </field>
		</record>    -->  
                          
    </data>
</openerp>
