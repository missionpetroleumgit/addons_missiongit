<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_hr_fiscalyear_form" model="ir.ui.view">
            <field name="name">hr.fiscalyear.form</field>
            <field name="model">hr.fiscalyear</field>
            <field name="arch" type="xml">
                <form string="Año Fiscal">
                <header>
                    <button name="create_period" states="draft" string="Create Monthly Periods" type="object" class="oe_highlight"/>
                    <button name="create_period3" states="draft" string="Create 3 Months Periods" type="object" class="oe_highlight"/>
                    <button name="close_fiscalyear" states="draft" string="Cerrar Año Fiscal" type="object" class="oe_highlight"/>
                    <field name="state" widget="statusbar" nolabel="1" />
                </header>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="end_journal_period_id"/>
                        </group>
                        <group>
                            <field name="date_start"/>
                            <field name="date_stop"/>
                        </group>
                    </group>
                    <field colspan="4" name="period_ids" nolabel="1" widget="one2many_list">
                        <form string="Period">
                            <group col="4">
                                <field name="name"/>
                                <field name="code"/>
                                <field name="date_start"/>
                                <field name="date_stop"/>
                                <field name="special" invisible="1"/>
                                <field name="state" invisible="1"/>
                            </group>
                        </form>
                    </field>
                </form>
            </field>
        </record>
        <record id="view_hr_fiscalyear_tree" model="ir.ui.view">
            <field name="name">hr.fiscalyear.tree</field>
            <field name="model">hr.fiscalyear</field>
            <field name="arch" type="xml">
                <tree colors="blue:state == 'draft';gray:state == 'done' " string="Año Fiscal">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="action_hr_fiscalyear" model="ir.actions.act_window">
            <field name="name">Años Fiscales</field>
            <field name="res_model">hr.fiscalyear</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="fiscalyear_config" parent="hr.menu_hr_configuration" action="action_hr_fiscalyear" name="Años Fiscales"/>

        <record id="period_view2" model="ir.ui.view">
            <field name="name">period.view2</field>
            <field name="model">hr.period.period</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Período">
                    <header>
                        <field name="state" widget="statusbar" nolabel="1" invisible="1"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="fiscalyear_id" widget="selection"/>
                            </group>
                            <group>
                                <label for="date_start" string="Duration"/>
                                <div>
                                    <field name="date_start" class="oe_inline" nolabel="1"/> -
                                    <field name="date_stop" nolabel="1" class="oe_inline"/>
                                </div>
                                <field name="code"/>
                                <field name="company_id" widget="selection" groups="base.group_multi_company"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_period_tree2">
            <field name="name">hr.period.tree2</field>
            <field name="model">hr.period.period</field>
            <field name="arch" type="xml">
              <tree colors="blue:state == 'draft';gray:state == 'done' " string="Períodos">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="date_start"/>
                    <field name="date_stop"/>
                    <field name="special" invisible="1"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="state" invisible="1"/>
                </tree>
            </field>
        </record>

		<record id="action_hr_period" model="ir.actions.act_window">
			<field name="name">Periodos</field>
			<field name="res_model">hr.period.period</field>
            <field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
            <field name="domain">[('state', '=', 'draft')]</field>
		</record>

        <menuitem id="period_config2" parent="hr.menu_hr_configuration" action="action_hr_period" name="Periodos"/>
    </data>
</openerp>