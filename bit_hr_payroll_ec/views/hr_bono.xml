        <record id="hr_adm_bono_search_view" model="ir.ui.view">
            <field name="name">hr.adm.incomes.search</field>
            <field name="model">hr.adm.incomes</field>
            <field name="arch" type="xml">
                <search string="Administracion de Bonos">
                    <field name="name"/>
                    <field name="code"/>
                </search>
            </field>
        </record>
        
        <record id="hr_adm_bono_form_view" model="ir.ui.view">
            <field name="name">hr.adm.bono.form</field>
            <field name="model">hr.adm.bono</field>
            <field name="arch" type="xml">
            <form string="Administracion de Bonos" version="7.0">
            <sheet>
            <group string="Registro">
            	<group>
	            	<field name="name"/>
                    <field name="code"/>
                    <field name="default_value"/>
            	</group>
			</group>
            </sheet>
            </form>
            </field>
        </record>
        
        <record id="hr_adm_bono_tree_view" model="ir.ui.view">
            <field name="name">hr.adm.bono.tree</field>
            <field name="model">hr.adm.bono</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <tree string="GestiÃ³n de Documentos" >
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>
        
        <record id="action_hr_adm_bono" model="ir.actions.act_window">
            <field name="name">Administracion de Bonos</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.adm.bono</field>
            <field name="context">{}</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="hr_adm_bono_search_view"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click para registrar un nuevo Bono.
              </p>
            </field>
        </record>
        
