                        <field name="employee_id" required="1" select="1" attrs="{'readonly':[('state','=','procesado')]}" domain="[('state_emp', '=', 'active')]"/>
                        <field name="reg_porcentaje" attrs="{'invisible':[('rel_name','!=','MULTAS')]}"/>
