        <record model="ir.ui.view" id="view_hr_sancion_form">
            <field name="name">hr.expense.sancion.view.form</field>
            <field name="model">hr.expense</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Egresos de Empleado">
                    <group string="Egresos de Empleado">
                        <field name="expense_type_id" required="1"  attrs="{'readonly':[('state','=','procesado')]}"
                               domain="[('name','=','MULTAS')]" on_change="onchange_expense_type(expense_type_id)"/>
