<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_employee_reintegration_form" model="ir.ui.view">
            <field name="name">hr.employee.reintegration.form</field>
            <field name="model">reintegration.employee</field>
            <field eval="25" name="priority"/>
            <field name="arch" type="xml">
                <form string="Reingresar empleado">
                    <group>
                        <field name="employee_id"/>
                        <field name="date"/>
                    </group>
                    <button name="button_ok" type="object" string="Reingresar"/>
                </form>
            </field>
        </record>

        <record id="hr_employee_reintegration_action" model="ir.actions.act_window">
            <field name="name">Reingreso</field>
            <field name="res_model">reintegration.employee</field>
            <field name="view_type">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_employee_reintegration_form"/>
        </record>

        <menuitem action="hr_employee_reintegration_action"
                  name="Reingresar Empleado"
                  id="hr_employee_reintegration_action_menu"
                  parent="hr.menu_hr_main"/>
    </data>
</openerp>