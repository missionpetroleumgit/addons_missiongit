<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
         <template id="decimo_report">
             <t t-call="report.html_container">
            <div class="page">
                <h2>Décimos</h2>
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th class="text-left">Cédula</th>
                            <th class="text-left">Empleado</th>
                            <th class="text-left">Décimo</th>
                            <th class="text-left">Período Inicial</th>
                            <th class="text-left">Período Final</th>
                            <th class="text-left">Tiempo Trabajado</th>
                            <th class="text-left">Total a Pagar</th>
                            <th class="text-left">Forma de Pago</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="create_report(data)" t-as="decimo">
                            <td class="text-left">
                                <span t-esc="decimo['cedula']"/>
                            </td>
                            <td class="text-left">
                                <span t-esc="decimo['employee_name']"/>
                            </td>
                            <td class="text-left">
                                <span t-esc="decimo['decimo_type']"/>
                            </td>
                            <td class="text-left">
                                <span t-esc="decimo['periodo_inicio']"/>
                            </td>
                            <td class="text-left">
                                <span t-esc="decimo['periodo_final']"/>
                            </td>
                            <td class="text-left">
                                <span t-esc="decimo['worked_time']"/>
                            </td>
                            <td class="text-left">
                                <span t-esc="decimo['pay_amount']"/>
                            </td>
                            <td class="text-left">
                                <span t-esc="decimo['forma_pago']"/>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
             </t>
        </template>
    </data>
</openerp>