<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
    <record id="view_hr_payslip_analysis_graph" model="ir.ui.view">
         <field name="name">hr.payslip.analysis.graph</field>
         <field name="model">hr.payslip.analysis</field>
         <field name="arch" type="xml">
             <graph string="Rol de pago" type="pivot">
                 <field name="employee_name" type="row"/>
                 <field name="amount" type="measure"/>                 
                 <field name="order" type="col"/>
                 <field name="salary_rule" type="col"/>
                 <field name="date_from" type="col"/>
                 <field name="date_to" type="col"/>
             </graph>
         </field>
    </record>
    
    <record id="filter_hr_payslip_analysis_employee" model="ir.filters">
        <field name="name">Por nombre del empleado</field>
        <field name="model_id">hr.payslip.analysis</field>
        <field name="user_id" eval="False"/>
        <field name="context">{'group_by': ['employee_name', 'order', 'identification_id'], 'col_group_by': ['paylist_name', 'order']}</field>
    </record>

    <record id="view_hr_payslip_analysis_search" model="ir.ui.view">
        <field name="name">hr.payslip.analysis.search</field>
        <field name="model">hr.payslip.analysis</field>
        <field name="arch" type="xml">
            <search string="Análisis Rol de Pago">
            	 <filter domain="[('date_from','&lt;=',(context_today()+relativedelta(day=31)).strftime('%%Y-%%m-%%d')),('date_from','&gt;=',(context_today()-relativedelta(day=1)).strftime('%%Y-%%m-%%d'))]" string="This Month"/>
            	 <field name="employee_name" type="row"/>
                 <field name="amount" type="measure"/>
                 <field name="order" type="col"/>
                 <field name="salary_rule" type="col"/>
                 <field name="date_from" type="col"/>
                 <field name="date_to" type="col"/>
            </search>
        </field>
    </record>

    <record id="action_hr_payslip_analysis_all" model="ir.actions.act_window">
        <field name="name">Análisis Rol de Pago</field>
        <field name="res_model">hr.payslip.analysis</field>
        <field name="view_type">form</field>
        <field name="view_mode">graph</field>
        <field name="context">{'group_by':[]}</field>
        <field name="search_view_id" ref="view_hr_payslip_analysis_search"/>
    </record>
    <menuitem action="action_hr_payslip_analysis_all" id="menu_hr_payslip_analysis_all" parent="hr.menu_hr_reporting" sequence="4"/>

</data>
</openerp>
