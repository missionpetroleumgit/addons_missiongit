<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
    <record id="view_hr_payslip_last_analysis_graph" model="ir.ui.view">
         <field name="name">hr.payslip.last.analysis.graph</field>
         <field name="model">hr.payslip.last.analysis</field>
         <field name="arch" type="xml">
             <graph string="Forma de Pago" type="pivot">
                 <!--<field name="acc_number" type="row"/>-->
                 <field name="employee_name" type="row"/>                 
            	 <field name="date_to" type="col"/>
                 <field name="amount" type="measure"/>                 
                 <!--<field name="order" type="col"/>-->
                 <!--<field name="salary_rule" type="col"/>-->
             </graph>
         </field>
    </record>
    
    <record id="filter_hr_payslip_last_analysis_employee" model="ir.filters">
        <field name="name">By Employee Name</field>
        <field name="model_id">hr.payslip.last.analysis</field>
        <field name="user_id" eval="False"/>
        <field name="context">{'group_by': ['employee_name', 'order', 'identification_id'], 'col_group_by': ['paylist_name', 'order']}</field>
    </record>

    <record id="view_hr_payslip_last_analysis_search" model="ir.ui.view">
        <field name="name">hr.payslip.last.analysis.search</field>
        <field name="model">hr.payslip.last.analysis</field>
        <field name="arch" type="xml">
            <search string="Last Pay Slip analysis">
            	 <field name="employee_name" type="row"/>
                 <field name="amount" type="measure"/>
                 <!--<field name="order" type="col"/>-->
                 <!--<field name="salary_rule" type="col"/>-->
                 <field name="date_from" type="col"/>
                 <field name="date_to" type="col"/>
            </search>
        </field>
    </record>

    <record id="action_hr_payslip_last_analysis_all" model="ir.actions.act_window">
        <field name="name">Rol De Pagos</field>
        <field name="res_model">hr.payslip.last.analysis</field>
        <field name="view_type">form</field>
        <field name="view_mode">graph</field>
        <field name="context">{'group_by':[]}</field>
        <field name="search_view_id" ref="view_hr_payslip_last_analysis_search"/>
    </record>


</data>
</openerp>
