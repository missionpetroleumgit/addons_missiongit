        <record id="hr_contract_o2s_inherited_tiw" model="ir.ui.view">
            <field name="name">hr.contract.o2s.inherited.tiw</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="Bonos a percibir">
                        <field name="bonus_ids">
                            <tree editable="top">
                                <field name="type" required="1"/>
                                <field name="related_field" required="1"/>
                                <field name="amount" required="1"/>
                                <field name="convert"/>
                                <field name="type_convert" attrs="{'required': [('convert','=',True)]}"/>
                                <field name="limit" widget="float_time" attrs="{'required': [('convert','=',True)]}"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </field>
        </record>

