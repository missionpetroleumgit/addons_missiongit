<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="report_purchase_quotation" inherit_id="purchase.report_purchase_quotation">
            <xpath expr="//div[@class='page']" position="replace">
                <div class="page">
                    <table style="width:100%;">
                        <tr t-foreach="o.control_sheet_ids" t-as="control">
                            <td>
                                <img t-if="res_company.logo" t-att-src="'data:image/png;base64,%s' % res_company.logo" style="max-height:120px"/>
                            </td>
                            <td>
                                Código:<span t-field="control.code"/><br/>
                                Revisión:<span t-field="control.review"/> <br/>
                                Emisión: <span t-field="control.issue"/><br/>
                            </td>
                        </tr>
                    </table>
                    <table>
                        <tr>
                            <td>DIRECCION:</td>
                            <td colspan="3"><span t-field="o.company_id.street"/>
                            </td>
                        </tr>
                        <tr>
                            <td>FONOS:</td>
                            <td colspan="3"><span t-field="o.company_id.phone"/>
                            </td>
                        </tr>
                        <tr>
                            <td>PAIS:</td>
                            <td colspan="3"><span t-esc="o.company_id.country_id.name"/>-<span t-esc="o.company_id.state_id.name"/>
                            </td>
                        </tr>
                    </table>
                    <div class="table">
                        <tr>
                            <h3 style="text-align: center;" t-if="o.state != 'draft' and o.type_purchase =='product'">ORDEN DE COMPRA N°
                            <span t-field="o.name"/>
                            </h3>
                            <h3 style="text-align: center;" t-if="o.state != 'draft' and o.type_purchase =='service'">SERVICIO DE COMPRA N°
                                <span t-field="o.name"/>
                            </h3>
                            <h3 style="text-align: center;" t-if="o.state == 'draft'">Request for Quotation N°
                                <span t-field="o.name"/>
                            </h3>
                        </tr>
                    </div>
                    <div class="row mt32 mb32">
                        <div  class="col-xs-3">
                            <strong>Para:</strong>
                            <p t-field="o.partner_id.name"/>
                        </div>
                        <div  class="col-xs-3">
                            <strong>De:</strong>
                            <p t-field="o.req_user_id"/>
                        </div>
                        <div  class="col-xs-3">
                            <strong>Atencion:</strong>
                            <p t-field="o.validator"/>
                        </div>
                        <div class="col-xs-3">
                            <strong>Asunto:</strong>
                            <p t-field="o.origin"/>
                        </div>
                    </div>
                    <div class="row mt32 mb32">
                        <div  class="col-xs-3">
                            <strong>Fecha:</strong>
                            <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d')"/>
                        </div>
                    </div>
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>
                                    <strong>CANT.</strong>
                                </th>
                                <th>
                                    <strong>UM</strong>
                                </th>
                                <th class="text-center">
                                    <strong>PRODUCTO</strong>
                                </th>
                                <th class="text-right">
                                    <strong>DESCRIPCION</strong>
                                </th>
                                <th class="text-right">
                                    <strong>C.ANALITICA</strong>
                                </th>
                                <th class="text-right">
                                    <strong>CODIGO</strong>
                                </th>
                                <th class="text-right">
                                    <strong>REEFERENCIA</strong>
                                </th>
                                <th class="text-right">
                                    <strong>PR. UNIT</strong>
                                </th>
                                <th class="text-right">
                                    <strong>PR. TOTAL</strong>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="o.order_line" t-as="line">
                                <td class="text-left">
                                    <span t-field="line.product_qty"/>
                                </td>
                                <td class="text-left">
                                     <span t-field="line.product_uom"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="line.product_id.name"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="line.name"/>
                                </td>
                                 <td class="text-right">
                                    <span t-field="line.account_analytic_id.name"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="line.product_id.default_code"/>
                                </td>
                                <td class="text-right">
                                    <!--<span t-field="line.price_unit"/>-->
                                </td>
                                <td class="text-left">
                                    <span t-field="line.price_unit"/>
                                </td>
                                <td class="text-left">
                                    <span t-field="line.price_subtotal"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="row">
                        <div class="col-xs-4 pull-right">
                            <table class="table table-condensed">
                                <tr class="border-black">
                                    <td>
                                        <strong>Total Without Taxes</strong>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="o.amount_untaxed"
                                              t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Taxes</td>
                                    <td class="text-right">
                                        <span t-field="o.amount_tax"
                                              t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                    </td>
                                </tr>
                                <tr class="border-black">
                                    <td>
                                        <strong>Total</strong>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="o.amount_total"
                                              t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <div class="row">
                        <div>
                            <table>
                                <tbody>
                                    <tr>
                                        <td>
                                            <strong>Observación:</strong>
                                        </td>
                                        <td colspan="3">
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <strong>Condición de Pago:</strong>
                                        </td>
                                        <td colspan="3">
                                            <span t-field="o.payment_term_id.name"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <strong>Lugar de Entrega:</strong>
                                        </td>
                                        <td colspan="3">
                                            <span t-esc="o.location_id.name"/>

                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <strong>Tiempo de Entrega:</strong>
                                        </td>
                                        <td colspan="3">
                                            <span t-esc="o.minimum_planned_date"/>

                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <strong>Cotizacion:</strong>
                                        </td>
                                        <td colspan="3">


                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <br/>
                    <br/>
                    <br/>
                    <div class="row mt32 mb32">
                        <div style="width: 30%;margin: 1%;float: left;text-align: center;white-space:nowrap;overflow: hidden;">
                            <!--<p t-field="o.req_user_id"/>-->
                            <p>________________________</p>
                            <p>COMPRADOR</p>
                            <p>MISSIONPETROLEUM S.A</p>

                        </div>
                        <div style="width: 30%;margin: 1%;float: left;text-align: center;white-space:nowrap;overflow: hidden;">
                            <!--<p/>-->
                            <p>________________________</p>
                            <p>GERENTE GENERAL</p>
                            <p>MISSIONPETROLEUM S.A</p>

                        </div>
                        <div style="width: 30%;margin: 1%;float: left;text-align: center;white-space:nowrap;overflow: hidden;">
                            <!--<p t-field="o.app_user_id"/>-->
                            <p>________________________</p>
                            <p>CONTROLADOR</p>
                            <p>MISSIONPETROLEUM S.A</p>

                        </div>
                    </div>
                    <p t-field="o.notes"/>
                    <div class="oe_structure"/>
                </div>
            </xpath>
        </template>
    </data>
</openerp>
