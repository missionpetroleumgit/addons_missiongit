<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="report_quotation_order_inherit">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <table style="width:100%;">
                            <tr>
                                <td>
                                    <img t-if="res_company.logo" t-att-src="'data:image/png;base64,%s' % res_company.logo" style="max-height:120px"/>
                                </td>
                            </tr>
                            <table>
                                <div class="row zero_min_height" style="width: 100%;">
                                    <div class="col-xs-12">
                                        <div style="border-bottom: 9px solid white;"/>
                                    </div>
                                    <div class="col-xs-12">
                                        <div style="border-bottom: 9px solid white;"/>
                                    </div>
                                    <div class="col-xs-12">
                                        <div style="border-bottom: 5px solid black;"/>
                                    </div>
                                    <div class="col-xs-3">
                                        <div style="border-bottom: 14px solid black;"/>
                                    </div>
                                    <tr>
                                        <td>
                                            <div style="border-bottom: 1px solid white;"/>
                                        </td>
                                    </tr>
                                </div>
						<t t-if="o.type_purchase == 'product'">
								<div style="position:absolute;left:700;top:65px;font-size: 14">
									<strong>Código:  </strong><span>F05-INT/018-01</span>
								</div>
								<div style="position:absolute;left:700;top:85px;font-size: 14">
									<strong>Revisión:  </strong><span>01</span>
								</div>
								<div style="position:absolute;left:700;top:105px;font-size: 14">
									<strong>Emisión:  </strong><span>01/09/2018</span>
								</div>
						</t>
						<t t-if="o.type_purchase == 'service'">
								<div style="position:absolute;left:700;top:65px;font-size: 14">
									<strong>Código:  </strong><span>F05-INT/020-00</span>
								</div>
								<div style="position:absolute;left:700;top:85px;font-size: 14">
									<strong>Revisión:  </strong><span>00</span>
								</div>
								<div style="position:absolute;left:700;top:105px;font-size: 14">
									<strong>Emisión:  </strong><span>01/09/2018</span>
								</div>
						</t>
                            </table>
                            <div style="position:absolute;left:19;top:140px;font-size: 12">
                                <span style="color:white !important"><strong>www.mission-petroleum.com </strong></span>
                            </div>
                            <div style="position:absolute;left:10;top:160px;font-size: 13">
                                DIRECCIÓN: <span t-field="res_company.street"/> <span t-field="res_company.street2"/>
                            </div>
                            <div style="position:absolute;left:10;top:180px;font-size: 13">
                                FONOS: <span t-field="res_company.phone"/>
                            </div>
                            <div style="position:absolute;left:10;top:200px;font-size: 13">
                                PAIS: <span t-field="res_company.country_id.name"/>
                            </div>
                        </table>
                        <div class="col-xs-12">
                            <p style="color:white !important">_____</p>
                        </div>
                        <div class="col-xs-12">
                            <p style="color:white !important">_____</p>
                        </div>
                        <div class="table">
                            <tr>
                                <strong><h3 style="text-align: center;" t-if="o.type_purchase =='product'">REQUISICION DE COMPRA<br/>
                                </h3></strong>
                                <strong><h3 style="text-align: center;" t-if="o.type_purchase =='service'">REQUISICION DE SERVICIO<br/>
                                </h3></strong>
                            </tr>
                        </div>
                        <tr>
                            <strong><h4 style="text-align: center;">
                                <span style="color:red !important" t-field="o.number_req"/>
                            </h4></strong>
                        </tr>
                            <div class="row mt32 mb32">
                                <div class="col-xs-3">
                                    <strong>FECHA: </strong>
                                    <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d')"/>
                                </div>
                            </div>
                            <div class="row mt32 mb32">
                                <div class="col-xs-9">
                                    <strong>SOLICITADO POR: </strong>
                                    <span t-field="o.req_user_id.name_related"/>
                                </div>
                            </div>
                            <div class="row mt32 mb32">
                                <div class="col-xs-12">
                                    <strong>REFERENCIA: </strong>
                                    <span t-field="o.origin"/>
                                </div>
                            </div>
                            <table class="table table-condensed table-bordered">
                                <thead>
                                    <tr>
                                        <th>
                                            <strong>CODIGO</strong>
                                        </th>
                                        <th class="text-center">
                                            <strong>PRODUCTO</strong>
                                        </th>
                                        <th class="text-right">
                                            <strong>DESCRIPCION DEL ARTICULO</strong>
                                        </th>
                                        <th class="text-right">
                                            <strong>CANTIDAD STOCK</strong>
                                        </th>
                                        <th class="text-right">
                                            <strong>CANTIDAD A PEDIR</strong>
                                        </th>
                                        <th>
                                            <strong>UM</strong>
                                        </th>
                                        <th class="text-right">
                                            <strong>TIEMPO NECESARIO</strong>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="o.request_products" t-as="line">
                                        <td class="text-left">
                                            <span t-field="line.product_id.default_code"/>
                                        </td>
                                        <td class="text-left">
                                            <span t-field="line.product_id.name"/>
                                            <span t-field="line.product_uom"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="line.description"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="line.qty_available"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="line.qty"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="line.product_uom"/>
                                        </td>
                                        <td class="text-left">
                                            <span t-field="line.date_requested"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        <div class="col-xs-12">
                            <strong>OBSERVACIONES GENERALES: </strong>
                            <p t-field="o.notes"/>
                        </div>
                        <div class="col-xs-12">
                            <p style="color:white !important" t-field="o.state"/>
                        </div>
                        <div class="row mt32 mb32">
                            <div class="col-xs-12">
                                <table class="table table-condensed table-bordered">
                                    <thead>
                                        <tr>
                                            <td class="text-center">SOLICITADO POR: <span/></td>
                                            <td class="text-center">APROBADO POR: <span/></td>
                                            <td class="text-center">REVISADO POR: <span/></td>
                                            <td class="text-center">APROBADO POR: <span/></td>
                                        </tr>
                                        <tr>
                                            <h6><td style="font-size:11" class="text-left">NOMBRE: <span/></td></h6>
                                            <h6><td style="font-size:11" class="text-left">NOMBRE: <span/></td></h6>
                                            <h6><td style="font-size:11" class="text-left">NOMBRE: <span/></td></h6>
                                            <h6><td style="font-size:11" class="text-left">NOMBRE: <span/></td></h6>
                                        </tr>
                                        <tr>
                                            <h6><td style="font-size:11" class="text-left">FIRMA: <span/></td></h6>
                                            <h6><td style="font-size:11" class="text-left">FIRMA: <span/></td></h6>
                                            <h6><td style="font-size:11" class="text-left">FIRMA: <span/></td></h6>
                                            <h6><td style="font-size:11" class="text-left">FIRMA: <span/></td></h6>
                                        </tr>
                                        <tr>
                                            <h6><td style="font-size:11" class="text-left">NOMBRE: <span/></td></h6>
                                            <h6><td style="font-size:11" class="text-left">NOMBRE: <span/></td></h6>
                                            <h6><td style="font-size:11" class="text-left">NOMBRE: <span/></td></h6>
                                            <h6><td style="font-size:11" class="text-left">NOMBRE: <span/></td></h6>
                                        </tr>
                                        <tr>
                                            <h6><td style="font-size:11" class="text-left">FIRMA: <span/></td></h6>
                                            <h6><td style="font-size:11" class="text-left">FIRMA: <span/></td></h6>
                                            <h6><td style="font-size:11" class="text-left">FIRMA: <span/></td></h6>
                                            <h6><td style="font-size:11" class="text-left">FIRMA: <span/></td></h6>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </template>
    </data>
</openerp>
