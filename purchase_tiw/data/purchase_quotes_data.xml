<?xml version="1.0" ?>
<openerp>

    <!-- Mail template are declared in a NOUPDATE block
         so users can freely customize/delete them -->
    <data noupdate="1">
        <!--Email template -->
        <record id="email_template_purchase_quotes" model="email.template">
            <field name="name">Purchase Quotes - Send by Email</field>
            <field name="email_from">${object.validator.email or ''}</field>
            <field name="subject">${object.company_id.name} Order (Ref ${object.name or 'n/a' })</field>
            <field name="partner_to">${object.partner_id.id}</field>
            <field name="model_id" ref="purchase_tiw.model_purchase_quotes"/>
            <field name="auto_delete" eval="True"/>
            <field name="report_template" ref="action_report_purchase_order"/>
            <field name="report_name">PO_${(object.name or '').replace('/','_')}</field>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="body_html"><![CDATA[
            <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: rgb(255, 255, 255); ">

    <p>Hello ${object.partner_id.name},</p>

    <p>Here is your ${object.state in ('draft', 'sent') and 'quotation' or 'order confirmation'} from ${object.company_id.name}: </p>

 ]]></field>
        </record>
    </data>
</openerp>
