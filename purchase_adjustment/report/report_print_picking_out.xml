<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="report_print_picking_out">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <table style="width:100%;">
                            <div style="position:absolute;left:140;top:20px;">
                                <td class="text-center" width="100px">
                                    <tr>
                                        <h2><span style="color:white !important">-----------------------------</span><span>MISSIONPETROLEUM S.A.</span></h2>
                                    </tr>
                                </td>
                            </div>
                            <table>
                                <div class="row zero_min_height" style="width: 100%;">
                                    <div class="col-xs-12">
                                        <div style="border-bottom: 9px solid white;"/>
                                    </div>
                                    <div class="col-xs-12">
                                        <div style="border-bottom: 9px solid white;"/>
                                    </div>
                                    <div class="col-xs-12">
                                        <div style="border-bottom: 5px solid black;"/>
                                    </div>
                                    <div class="col-xs-3">
                                        <div style="border-bottom: 14px solid black;"/>
                                    </div>
                                    <tr>
                                        <td>
                                            <div style="border-bottom: 1px solid white;"/>
                                        </td>
                                    </tr>
                                </div>
                            </table>
                            <div style="position:absolute;left:24;top:60px;font-size: 13">
                                <span style="color:white !important"><strong>www.mission-petroleum.com </strong></span>
                            </div>
                            <div style="position:absolute;left:10;top:80px;font-size: 13">
                                DIRECCIÃ“N: <span t-field="res_company.street"/><span t-field="res_company.street2"/>
                            </div>
                            <div style="position:absolute;left:10;top:100px;font-size: 13">
                                FONOS: <span t-field="res_company.phone"/>
                            </div>
                            <div style="position:absolute;left:10;top:120px;font-size: 13">
                                PAIS: <span t-field="res_company.country_id.name"/>
                            </div>
                        </table>
                        <div style="position:absolute;left:10;top:130px;font-size: 12px">
                            <table>
                                <h3 class="text-center">
                                    <t t-if="o.picking_type_id.code=='incoming'">
                                        <span>INGRESO DE MATERIAL No.:  </span><strong><span style="color:black !important" t-field="o.name"/></strong>
                                    </t>
                                    <t t-if="o.picking_type_id.code=='outgoing'">
                                        <span>SALIDA DE MATERIAL No.:  </span><strong><span style="color:black !important" t-field="o.name"/></strong>
                                    </t>
                                    <t t-if="o.picking_type_id.code=='internal'">
                                        <span>SOLICITUD DE DESPACHO No:  </span><strong><span style="color:black !important" t-field="o.name"/></strong>
                                    </t>
                                </h3>
                            </table>
                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <td>SOLICITADO POR: <span t-field="o.create_uid.name"/></td>
                                        <td>FECHA SOLICITUD:  <span t-esc="o.date"/></td>
                                    </tr>
                                    <tr>
                                        <td>FECHA TRANSFERENCIA: <span t-esc="o.reception_date"/></td>
                                    </tr>
                                </thead>
                            </table>
                            <table class="table table-condensed table-bordered">
                                <thead>
                                    <tr>
                                        <th width="7%">CODIGO</th>
                                        <th width="58%">PRODUCTO</th>
                                        <th width="5%">UOM</th>
                                        <th width="7%">CANTIDAD</th>
                                    </tr>
                                </thead>
                            </table>
                            <table class="table table-condensed table-bordered">
                                <tbody class="sale_tbody">
                                    <tr t-foreach="o.move_lines" t-as="l">
                                        <td class="text-left" width="7%"><span t-esc="l.product_id.default_code"/></td>
                                        <td class="text-left" width="58%"><span t-field="l.product_id.name"/> </td>
                                        <td class="text-center" width="5%"><span t-field="l.product_id.uom_id.name"/> </td>
                                        <td class="text-center" width="7%"><span t-field="l.product_uom_qty"/> </td>
                                    </tr>
                                </tbody>
                            </table>
                            <div>
                                <p><strong>OBSERVACIONES:</strong></p>
                                <table>
                                    <h6 class="text-left">
                                        <span t-field="o.note"/>
                                    </h6>
                                </table>
                                <p><strong>ENTREGADO A:</strong></p>
                                <table>
                                    <h6 class="text-left">
                                        <strong><span t-field="o.delivered_to"/></strong>
                                    </h6>
                                </table>
                                <table>
                                    <tr>
                                        <td width="20%">
                                            <strong><p class="text-center" style="color:white !important">----</p></strong>
                                            <p class="text-center"><strong>______________________________</strong></p>
                                            <p class="text-center"><strong>RECIBIDO POR:</strong></p>
                                        </td>
                                        <td class="text-right" width="55%">
                                            <strong><p class="text-center" style="color:white !important">----</p></strong>
                                            <p class="text-center"><strong>______________________________</strong></p>
                                            <p class="text-center"><strong>DESPACHADO POR:</strong></p>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </template>
    </data>
</openerp>
